<style>
.card #course-id{
    margin-top: 16px;
}
.card-text{
    text-align:justify;
}
.pagination {
  display: flex;
  justify-content: center;
  margin: 20px 0;
}

.pagination-list {
  list-style: none;
  padding: 0;
  margin: 0;
  display: flex;
}

.pagination-list li {
  margin: 0 5px;
}

.pagination-list a, .pagination-list span {
  display: block;
  padding: 10px 15px;
  text-decoration: none;
  color: #000; /* Màu chữ cho các nút phân trang */
  border: 2px solid #000; /* Màu viền cho các nút phân trang */
  border-radius: 5px;
  transition: background-color 0.3s, color 0.3s, transform 0.3s;
}

.pagination-list a:hover {
  background-color: #333; /* Màu nền khi hover */
  color: #fff; /* Màu chữ khi hover */
  transform: scale(1.1); /* Phóng to khi hover để tăng tương tác */
}

.pagination-list .active a {
  background-color: #000; /* Màu nền cho nút phân trang hiện tại */
  color: #fff; /* Màu chữ cho nút phân trang hiện tại */
  border-color: #000; /* Màu viền cho nút phân trang hiện tại */
  font-weight: bold; /* Làm chữ đậm để nổi bật hơn */
}

.pagination-list .disabled span {
  color: #6c757d; /* Màu chữ cho các nút phân trang bị vô hiệu hóa */
  border-color: #6c757d; /* Màu viền cho các nút phân trang bị vô hiệu hóa */
  cursor: not-allowed;
}


</style>
<div class="mt4">
    <div class="row">

        {{#each coursesss}}
        <div class="col-sm-6 col-lg-4">
            <div class="card" id="course-id" >
                <a href="/courses/{{this.slug}}">
                    <img src="{{this.image}}" class="card-img-top" alt="{{this.name}}">
                </a>
                <div class="card-body">
                <a href="/courses/{{this.slug}}">
                    <h5 class="card-title">{{this.name}}</h5>
                </a>
                    <p class="card-text">{{this.desc}}</p>
                    <a href="#" class="btn btn-primary">Mua khóa học</a>
                </div>
            </div>
        </div>
        {{/each}}
 
    </div>
    <div class="pagination">
        <ul class="pagination-list">
            {{#if pagination.pageCount}}
            {{#if (gt pagination.page 1)}}
                <li><a href="?p=1">First</a></li>
                <li><a href="?p={{subtract pagination.page 1}}">Prev</a></li>
            {{else}}
                <li class="disabled"><span>First</span></li>
                <li class="disabled"><span>Prev</span></li>
            {{/if}}

            {{#each (range 1 pagination.pageCount) as |num|}}
                <li class="{{#if (eq num pagination.page)}}active{{/if}}">
                <a href="?p={{num}}">{{num}}</a>
                </li>
            {{/each}}

            {{#if (lt pagination.page pagination.pageCount)}}
                <li><a href="?p={{add pagination.page 1}}">Next</a></li>
                <li><a href="?p={{pagination.pageCount}}">Last</a></li>
            {{else}}
                <li class="disabled"><span>Next</span></li>
                <li class="disabled"><span>Last</span></li>
            {{/if}}
            {{/if}}
        </ul>
    </div>

</div>
